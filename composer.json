{
    "name": "winzou/state-machine-bundle",
    "type": "symfony-bundle",
    "description": "Bundle for the very lightweight yet powerful PHP state machine",
    "keywords": ["bundle", "statemachine"],
    "license": "MIT",
    "authors": [
        {
            "name": "Alexandre Bacco",
            "homepage": "http://alex.bacco.fr"
        }
    ],
    "require": {
        "php":                      ">5.3.0",
        "symfony/framework-bundle": "~2.1",
        "winzou/state-machine":     "~0.1"
    },
    "require-dev": {
        "phpspec/phpspec": "~2.0"
    },
    "autoload": {
        "psr-0": { "winzou\\Bundle\\StateMachineBundle": "" }
    },
    "autoload-dev": {
        "psr-4": { "spec\\": "spec/" }
    },
    "config": {
        "bin-dir": "bin"
    }
}
